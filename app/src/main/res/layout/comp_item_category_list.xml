<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<!--        <variable-->
<!--            name="category"-->
<!--            type="String" />-->

        <variable
            name="position"
            type="int" />

        <variable
            name="listener"
            type="com.lge.lgshoptimem.ui.component.ComponentItemListener" />

        <variable
            name="viewdata"
            type="com.lge.lgshoptimem.model.dto.CategoryItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cic_cl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_category_color">

        <TextView
            android:id="@+id/cic_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black_141414"
            android:textStyle="bold"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="asdasdasd"/>

        <ImageButton
            android:id="@+id/cic_ib_fold"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/sel_btn_fold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cic_tv_category"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>