<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.lge.lgshoptimem.model.dto.Curation" />
        <variable
            name="position"
            type="int" />
        <variable
            name="listener"
            type="com.lge.lgshoptimem.ui.component.ComponentItemListener" />
        <variable
            name="viewmodel"
            type="com.lge.lgshoptimem.model.dto.Curation" />

<!--        <variable-->
<!--            name="viewmodel"-->
<!--            type="com.lge.lgshoptimem.ui.component.TitleHeaderListComponent.ComponentViewModel&lt;Curation>" />        -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comp_cl_item"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="@{v -> listener.onClick(v, position)}">

        <ImageView
            android:id="@+id/comp_iv_main_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:imageUrl="@{viewmodel.thumbnailUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dummy_product_image5" />

        <ToggleButton
            android:id="@+id/comp_tb_favorate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/sel_favorate"
            android:onClick="@{v -> listener.onClick(v, position)}"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="@id/comp_iv_main_image"
            app:layout_constraintEnd_toEndOf="@id/comp_iv_main_image"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="@id/comp_iv_main_image"
            app:layout_constraintTop_toTopOf="@id/comp_iv_main_image"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:id="@+id/comp_tv_sold_out"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="SOLD-OUT"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/comp_iv_main_image"
            app:layout_constraintEnd_toEndOf="@id/comp_iv_main_image"
            app:layout_constraintStart_toStartOf="@id/comp_iv_main_image"
            app:layout_constraintTop_toTopOf="@id/comp_iv_main_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/comp_iv_main_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    <!--        android:text="@{viewmodel.mldDataList.get(position).productInfos.get(0).prdtNm}"-->
            <TextView
                android:id="@+id/comp_tv_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:text="Mamam 4ever Young Teenager Special Skin Care Solution"
                android:textColor="@color/black_141414"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    <!--        android:text="@{viewmodel.mldDataList.get(position).productInfos.get(0).price3}"-->
            <TextView
                android:id="@+id/comp_tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/pink_e32e70"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/comp_tv_price"
                app:layout_constraintTop_toBottomOf="@id/comp_tv_product_title"
                android:text="12%"/>

    <!--        android:text="@{viewmodel.mldDataList.get(position).productInfos.get(0).price3}"-->
            <TextView
                android:id="@+id/comp_tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_141414"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/comp_tv_discount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/comp_tv_product_title"
                android:text="$135.95"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>