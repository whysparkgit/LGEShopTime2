<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            />

        <TextView
            android:id="@+id/fcd_tv_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_141414"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/coupon_detail"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/gl_v1"
            app:layout_constraintRight_toLeftOf="@id/fcd_btn_close"
            />

        <Button
            android:id="@+id/fcd_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:background="@drawable/btn_close_b_nor"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/fcd_tv_coupon_detail"
            app:layout_constraintRight_toRightOf="@id/gl_v2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fcd_tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="31dp"
            android:textColor="@color/gray_505050"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="[QVC] Shop Time Welcome Coupon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fcd_tv_coupon_detail"
            app:layout_constraintLeft_toRightOf="@id/gl_v1"
            app:layout_constraintRight_toLeftOf="@id/gl_v2"
            />

        <TextView
            android:id="@+id/fcd_tv_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray_898989"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="12/19/2020 08:00 AM"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fcd_tv_coupon_name"
            app:layout_constraintLeft_toRightOf="@id/gl_v1"
            app:layout_constraintRight_toLeftOf="@id/gl_v2"
            />

        <View
            android:id="@+id/fcd_v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e4e7e9"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@id/fcd_tv_coupon_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/fcd_tv_coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black_141414"
            android:textSize="19sp"
            android:gravity="center_vertical"
            android:text="@string/code"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fcd_v_line"
            app:layout_constraintLeft_toRightOf="@id/gl_v1"
            app:layout_constraintRight_toLeftOf="@id/gl_v2"
            />

        <TextView
            android:id="@+id/fcd_tv_coupon_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="@color/black_141414"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\n\n\n\asdasdasda\n\asdasd"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fcd_tv_coupon_code"
            app:layout_constraintLeft_toRightOf="@id/gl_v1"
            app:layout_constraintRight_toLeftOf="@id/gl_v2"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>