<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="component"
            type="com.lge.lgshoptimem.ui.component.HeaderListComponent" />
        <variable
            name="adapter"
            type="com.lge.lgshoptimem.ui.component.BaseListComponent.ComponentAdapter" />
        <variable
            name="viewdata"
            type="com.lge.lgshoptimem.model.dto.Curation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comp_cl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comp_tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black_141414"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@{component.subject}"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="KEYWORD REMINDER" />

        <View
            android:id="@+id/vw_h1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e9e9e9"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/comp_tv_subject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/comp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/black_141414"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@{component.title}"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/vw_h1"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Shop HSN ShopTime" />

        <com.lge.lgshoptimem.ui.component.VideoViewComponent
            android:id="@+id/comp_iv_main_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/comp_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:videoUrl="https://vdqvcus.akamaized.net/6221374733001.m3u8"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/comp_cl_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_f4f4f4"
            app:layout_constraintTop_toBottomOf="@+id/comp_iv_main_video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/comp_iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_popular_ch_qvc" />

            <TextView
                android:id="@+id/comp_tv_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="10dp"
                android:text="Hair Care\nDr Surata Vanessa 2 Pacs"
                app:layout_constraintTop_toTopOf="@+id/comp_iv_logo"
                app:layout_constraintStart_toEndOf="@+id/comp_iv_logo"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/comp_ll_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/comp_tv_product_title"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/comp_tv_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(adapter.itemCount) + ` `}"
                    android:textColor="@color/gray_505050"
                    android:textSize="14sp"
                    tools:text="4" />

                <TextView
                    android:id="@+id/comp_tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{component.subtitle}"
                    android:textColor="@color/gray_505050"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/comp_tv_current_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_e9e9e9"
                app:layout_constraintTop_toBottomOf="@+id/comp_ll_index"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comp_rv_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_f4f4f4"
            app:layout_constraintTop_toBottomOf="@+id/comp_cl_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>